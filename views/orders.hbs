<h1>My orders</h1>
<hr>

{{#if orders.length}}
  {{#each orders}}
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-content">
          <span class="card-title"> Order: <small>{{_id}}</small></span>
          <p>Date: <em class="date">{{date}}</em></p>
          <p>Customer: <em>{{user.userId.name}}</em> Email: ({{user.userId.email}})</p>

          <ol>
            {{#each items}}
            <li>
              {{item.title}} (x<strong>{{count}}</strong>)
            </li>
            {{/each}}
          </ol>
          <hr>
          <p>Price: <span class="price">{{price}}</span></p>
          <form action="/orders/remove" method="POST">
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn red">Delete order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
  <p>Are not any orders</p>
{{/if}}