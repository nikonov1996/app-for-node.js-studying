<h1>Edit item: {{item.title}}</<h1>
<hr>
<form action="/items/edit" method="POST">
<div class="input-field">
  <input id="title" name="title" type="text" class="validate" required value="{{item.title}}">
  <label for="title">Item's title</label>
  <span class="helper-text" data-error="Enter title" ></span>
</div>
 

 <div class="input-field">
  <input id="price" name="price" type="text" class="validate" required  min="100" value="{{item.price}}">
  <label for="price">Item's price</label>
  <span class="helper-text" data-error="Enter cost" ></span>
</div>
 

 <div class="input-field">
  <input id="img" name="img" type="text" class="validate" required value="{{item.img}}">
  <label for="img">Item's image URL</label>
  <span class="helper-text" data-error="Enter image URL" ></span>
</div>

<input type="hidden" name="id" value="{{item.id}}">

<button class="btn btn-primary">Edit</<button>
  
 </form>